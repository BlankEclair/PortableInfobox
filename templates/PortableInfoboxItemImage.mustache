<div class="pi-item pi-item-image no-margins">
	<figure class="pi-image-wrapper">
		<a href="{{url}}" class="image image-thumbnail{{#isVideo}} video video-thumbnail small{{/isVideo}}"
		   title="{{alt}}">
			<img src="{{thumbnail}}" class="pi-image" alt="{{alt}}" width="{{{width}}}" height="{{{height}}}" data-{{media-type}}-key="{{name}}" data-{{media-type}}-name="{{name}}"/>
			{{#isVideo}}
			{{#duration}}
			<span class="duration" itemprop="duration">{{duration}}</span>
			{{/duration}}
			<span class="play-circle"></span>
			{{/isVideo}}
		</a>
		{{#caption}}<figcaption class="pi-item-margins pi-caption">{{{caption}}}</figcaption>{{/caption}}
	</figure>
</div>