<div class="pi-item pi-item-image no-margins">
	<figure class="pi-image-wrapper">
		<a href="{{url}}" class="image image-thumbnail" title="{{alt}}">
			<img src="{{thumbnail}}" class="pi-image" alt="{{alt}}" width="{{{width}}}" height="{{{height}}}" data-image-key="{{name}}" data-image-name="{{name}}"/>
		</a>
		{{#caption}}<figcaption class="pi-item-margins pi-caption">{{{caption}}}</figcaption>{{/caption}}
	</figure>
</div>